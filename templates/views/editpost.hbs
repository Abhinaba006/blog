{{>header}}

<body>
    {{>nav}}
    <form action="/editpost/{{blog._id}}" , method="post" id="btn">
        <h2>Title of your post</h2>
        <label for="title"></label>
        <input type="text" name="title" placeholder="Title of header" value="{{blog.title}}">
        <h2>Enter The Story</h2>
        <label for="text"></label>
        <textarea name="text" placeholder="Enter your story">{{blog.text}}</textarea>
        <br>
        <div class="form-check">
            <label class="form-check-label" for="flexCheckDefault"></label>
            <input class="form-check-input" type="checkbox" value="true" id="flexCheckDefault" name="published">
                Publish to public
            </label>
        </div>
        <input type="submit">
    </form>
</body>